<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary
  xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Brand palette -->
    <Color x:Key="PrimaryColor">#2E7D32</Color>
    <!-- pharmacy green -->
    <Color x:Key="PrimaryDark">#1B5E20</Color>
    <Color x:Key="AccentColor">#0277BD</Color>
    <!-- trust blue -->

    <!-- Backgrounds & Text -->
    <Color x:Key="PageBackground">#F0F4F8</Color>
    <Color x:Key="CardBackground">#FFFFFF</Color>
    <Color x:Key="TextPrimary">#212121</Color>
    <Color x:Key="TextSecondary">#616161</Color>

    <!-- Status colors -->
    <Color x:Key="StatusPending">#FFC107</Color>
    <Color x:Key="StatusApproved">#4CAF50</Color>
    <Color x:Key="StatusDenied">#E53935</Color>

</ResourceDictionary>
